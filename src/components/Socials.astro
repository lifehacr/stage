---
import { default as cn } from 'classnames';
import SimpleLinkButton from './Button.astro';
const { isFooter } = Astro.props;
---

<div
	class={cn(
		'flex items-center font-mono',
		isFooter ? 'gap-4 text-sm' : 'gap-2'
	)}>
	<SimpleLinkButton
		href="https://api.whatsapp.com/"
		target="_blank"
		rel="noopener"
		isSimple={isFooter}
		icon="brand-whatsapp"
	/>
	<SimpleLinkButton
		href="https://telegram.org/"
		target="_blank"
		rel="nofollow me"
		isSimple={isFooter}
		icon="brand-telegram"
	/>
	<SimpleLinkButton
		href="https://github.com/"
		target="_blank"
		rel="nofollow me"
		isSimple={isFooter}
		icon="brand-github"
	/>
  <SimpleLinkButton
		href="https://www.facebook.com/techbyt"
		target="_blank"
		rel="nofollow me"
		isSimple={isFooter}
		icon="brand-facebook"
	/>
	<SimpleLinkButton
		href="https://x.com/"
		target="_blank"
		rel="nofollow me"
		isSimple={isFooter}
		icon="brand-x"
	/>
	<SimpleLinkButton
		href="/hi"
		target="_blank"
		rel="noopener"
		isSimple={isFooter}
		icon="mail"
	/>
	<SimpleLinkButton
		href="/rss.xml"
		target="_blank"
		rel="noopener"
		isSimple={isFooter}
		icon="rss"
	/>
	{!isFooter && <div class="h-[1px] bg-gray-200 w-full" />}
</div>
